#!/usr/bin/python3
# BOTD - python3 IRC channel daemon.
#
# run unittests.

__version__ = 1

import os, sys ; sys.path.insert(0, os.getcwd())

import bl
import logging
import shutil
import time
import unittest

from bl.obj import Object, starttime
from bl.krn import Kernel
from bl.log import level
from bl.shl import execute, parse_cli
from bl.tms import elapsed
from bl.trc import get_exception
from bl.trm import termsave, termreset
from bl.typ import get_cls
from bl.usr import Users
from bl.utl import cdir

opts = [
    ('-d', '--datadir', 'store', str, "", 'set working directory.', 'workdir'),
    ('-m', '--modules', 'store', str, "", 'modules to load.', 'modules'),
    ('-o', '--options', "store", str, "", "options to use.", 'options'),
    ('-l', '--loglevel', 'store', str, "", 'set loglevel.', 'level'),
    ('-v', '--verbose', 'store_true', False, 'enable verbose mode.', 'verbose')
]

k = Kernel()

def initialize(cfg):
    cdir("testdata")
    k.users.oper("test@shell")
    k.cfg.prompt = False
    k.walk("bl")
    k.walk("botd")
    k.start()
    for c in k.names.values():
        try:
            o = get_cls(c)()
            o.txt = "yo!"
            o.save()
        except (AttributeError, TypeError) as ex:
            pass

def main():
    try:
        shutil.rmtree("testdata")
    except:
        pass
    cfg = parse_cli("test", __version__, opts)
    bl.obj.workdir = "testdata"
    k.cfg.update(cfg)
    level("error")
    initialize(cfg)
    k.cfg.debug = True
    level(k.cfg.level)
    test_path = os.getcwd() + os.sep + "tests"
    p = ""
    if k.cfg.args:
        p = "test_%s*" % k.cfg.args[0]
    if not p:
        p = "test_*"
    suite = unittest.loader.TestLoader().discover(test_path, pattern=p)
    unittest.TextTestRunner(verbosity=3).run(suite)
   
execute(main)
print(elapsed(time.time() - starttime))
os._exit(0)
